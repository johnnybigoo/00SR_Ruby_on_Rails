<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Data Overview</h1>
    <div class="bg-white shadow rounded p-4 mb-4">
        <% if @users.any? %>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">First Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Last Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created At</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% @users.each do |user| %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap"><%= user.first_name %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= user.last_name %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= user.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= user.phone %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= user.created_at.present? ? user.created_at.strftime('%Y-%m-%d %H:%M:%S') : '' %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <% else %>
        <p class="text-gray-600">No users found.</p>
        <% end %>
    </div>
    <a href="<%= dashboard_csv_path %>" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
        Export CSV
    </a>
</div>