<div class="min-h-screen bg-gray-100">
    <!-- Banner -->
    <div class="bg-blue-900 text-white">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm"><%= @current_date %></p>
                    <h1 class="text-xl font-semibold"><%= @greeting %>, <%= @user_name %></h1>
                </div>
                <div class="hidden md:block">
                    <div class="h-16 w-32 bg-white/10 rounded-lg"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Quick Links Section -->
        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <div class="p-6">
                <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Links</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <%= link_to users_register_path, class: "flex items-center p-4 bg-white border rounded-lg shadow-sm hover:bg-gray-50" do %>
                    <div class="flex-shrink-0">
                        <i class="fas fa-user-plus text-blue-500 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-900">Create a Lead</p>
                        <p class="text-sm text-gray-500">Register new potential customers</p>
                    </div>
                    <% end %>

                    <%= link_to dashboard_path, class: "flex items-center p-4 bg-white border rounded-lg shadow-sm hover:bg-gray-50" do %>
                    <div class="flex-shrink-0">
                        <i class="fas fa-table text-blue-500 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-900">Consult Leads</p>
                        <p class="text-sm text-gray-500">View and manage existing leads</p>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>