<!-- Back to Home with SVG Image -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 p-6">
    <%= link_to root_path, class: "inline-flex items-center text-blue-600 hover:underline" do %>
    <%= image_tag "left-arrow.svg", class: "h-8 w-8 mr-2", alt: "Back Arrow" %>
    <span>&emsp;</span>
    <span class="text-blue-800">Back</span>
    <% end %>
</div>

<div class="max-w-xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Register A New Lead</h1>

    <%= form_with model: @user, url: users_path, local: true, class: "space-y-6" do |f| %>
    <div>
        <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, placeholder: "Enter first name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-200 focus:ring" %>
    </div>

    <div>
        <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, placeholder: "Enter last name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-200 focus:ring" %>
    </div>

    <div>
        <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
        <%= f.telephone_field :phone, placeholder: "Enter phone number", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-200 focus:ring" %>
    </div>

    <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, placeholder: "Enter email address", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-200 focus:ring" %>
    </div>

    <div>
        <%= f.submit "Register", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm font-bold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none" %>
    </div>
    <% end %>

    <% if notice %>
    <div class="mt-4 p-4 border border-green-400 bg-green-100 text-green-700 rounded">
        <%= notice %>
    </div>
    <% end %>

    <% if @user.errors.any? %>
    <div class="mt-4 p-4 border border-red-400 bg-red-100 text-red-700 rounded">
        <p class="font-bold">Error(s): Please review the following issues:</p>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>